@model PizzaShop.Repository.ViewModels.ModifiergroupViewModel

<div class="modal fade" id="editModifierGroupModalContainer" data-bs-backdrop="static" data-bs-keyboard="false"
    tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Update Modifier Group</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editModifierGroupForm" asp-action="UpdateModifierGroup" asp-controller="Menu" method="post">
                <div class="modal-body">
                    <input type="hidden" asp-for="ModifierGroupId" id="EditModifiergroupid" />

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" required name="ModifierGroupName"
                            id="EditModifiergroupname" asp-for="ModifierGroupName" placeholder="Name*" />
                        <span class="text-danger" asp-validation-for="ModifierGroupName"></span>
                        <label for="EditModifiergroupname" class="form-label">Name*</label>
                    </div>

                    <div class="form-floating  mb-3">
                        <textarea class="form-control" id="editModifierGroupDescription" name="Description"
                            asp-for="Description" placeholder="Description*" /></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                        <label for="editModifierGroupDescription" class="form-label">Description</label>
                    </div>

                    <div class="mb-3">
                        <a class="text-decoration-none btn text-primary" id="openExistingModifiersEdit">+ Add Existing
                            Modifiers</a>
                    </div>

                    <div id="selectedModifiersContainerEdit" class="mt-2">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
