@model PizzaShop.Repository.ViewModels.ModifiergroupViewModel

<!-- Add ModifierGroup Modal -->
<div class="modal fade" id="addModifierGroupModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Add Modifier Group</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addModifierGroupForm" asp-action="AddModifierGroup" asp-controller="Menu" method="post">
                <div class="modal-body">
                    <!-- Modifier Group Name -->
                    <div class="form-floating mb-3">
                        <input asp-for="ModifierGroupName" class="form-control" placeholder="Modifier Group Name"  name="ModifierGroupName">
                        <label for="ModifierGroupName">Name*</label>
                        <span asp-validation-for="ModifierGroupName" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Modifier Description" name="Description"></textarea>
                        <label for="Description">Description</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <a class="text-decoration-none btn text-primary" id="addExistingModifiers">+ Add Existing Modifiers</a>
                    </div>

                    <div id="selectedModifiersContainer" class="mt-2"></div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal" id="cancelModifierSelectionMain">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Ensure Validation Scripts are Included -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
