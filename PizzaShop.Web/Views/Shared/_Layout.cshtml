<body>
    <div class="loader-container" id="loader">
        <div class="loading-text">
            <span id="pizza-quote">Loading your slice of goodness...</span>
            <div>
                <span class="dot">.</span>
                <span class="dot">.</span>
                <span class="dot">.</span>
            </div>
        </div>
        <div class="progress-container">
            <div class="progress-bar" id="progress"></div>
        </div>
