                <!-- ============================================= h-nav section starts ============================================= -->
                <div class="custom-navbar-bg-color d-flex justify-content-between align-items-center p-3 w-100">
                    <div><img src="~/images/list.svg" alt="" width="30px" class="d-none d-lg- ">
