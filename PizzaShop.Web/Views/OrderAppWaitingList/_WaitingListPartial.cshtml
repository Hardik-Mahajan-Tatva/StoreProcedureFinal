@model IEnumerable<PizzaShop.Repository.ViewModels.WaitingListViewModel>

<div class="d-flex justify-content-between mb-3 d-sm-row d-column flex-wrap flex-sm-nowrap">
    <div class="d-flex gap-3 ms-auto align-items-center">
    </div>
</div>

<div class="table-responsive">
    <table class="table table-sm custom-table align-middle">
        <tr class="tableheader">
            <td>Token No</td>
            <td>Created At</td>
            <td>Waiting Time</td>
            <td>Name</td>
            <td>No. of Persons</td>
            <td>Phone Number</td>
            <td>Email</td>
            <td>Action</td>
        </tr>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TokenNo</td>
                        <td>@item.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</td>
                        <td>@item.WaitingTime</td>
                        <td>@item.Name</td>
                        <td>@item.Persons</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>

                            <div class="d-flex justify-content-center  align-items-center" data-customerId="@item.CustomerId">
                                <button class="text-black text-reset edit-waiting-token btn cursor-pointer"
                                    data-customerId="@item.CustomerId" data-sectionId="@item.SectionId" title="Edit">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                        class="bi bi-pen" viewBox="0 0 16 16">
                                        <path
                                            d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
                                    </svg>
                                </button>
                                <button class="text-black text-reset deleteWaitingTokenBtn btn cursor-pointer" title="Delete"
                                    data-waitingtokenid="@item.WaitingTokenId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                        class="bi bi-trash3" viewBox="0 0 16 16">
                                        <path
                                            d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                                    </svg>
                                </button>
                                <button class="text-black text-reset open-assign-table-modal btn cursor-pointer" title="View"
                                    data-customerId="@item.CustomerId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                        class="bi bi-person" viewBox="0 0 16 16">
                                        <path
                                            d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                                    </svg>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No records found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
