@model PizzaShop.Repository.ViewModels.LoginViewModel;
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Login Page";
}
@if (TempData["ErrorMessage"] != null)
{
    <script>toastr.error('@TempData["ErrorMessage"]');</script>
}
@if (TempData["SuccessMessage"] != null)
{
    <script>toastr.success('@TempData["SuccessMessage"]');</script>
}
@if (TempData["InfoMessage"] != null)
{
    <script>toastr.info('@TempData["InfoMessage"]');</script>
}
@if (ViewBag.ErrorMessage != null)
{
    <script>toastr.error('@ViewBag.ErrorMessage');</script>
}
@if (ViewBag.SuccessMessage != null)
{
    <script>toastr.success('@ViewBag.SuccessMessage');</script>
}
@if (ViewBag.WarningMessage != null)
{
    <script>toastr.warning('@ViewBag.WarningMessage');</script>
}
@if (ViewBag.InfoMessage != null)
{
    <script>toastr.info('@ViewBag.InfoMessage');</script>
}
<div class="p-2 p-md-5 d-flex align-items-center justify-content-center col-12 col-md-6 vh-100">
    <div>
        <div class="d-flex justify-content-center align-items-center mb-5 w-100">
            <div class="d-flex gap-2 align-items-center justify-content-center">
                <img src="~/images/logos/pizzashop_logo.png" alt="PizzaShop Logo" width="15%" height="15%">
                <h1 class="font-weight-bold custom-body-text-color">PIZZASHOP</h1>
            </div>
        </div>
        <h3 class="mb-4">Welcome,</h3>
        @if (ViewBag.ErrorMessage != null)
        {
            <div style="color: red;">@ViewBag.ErrorMessage</div>
        }
        <form method="post" asp-action="Login" asp-controller="Auth" novalidate>
            <div class="mb-4">
                <div class=" d-flex align-items-center">
                    <input asp-for="Email" type="email" class="form-control" id="custom-login-input"
                        aria-describedby="emailHelp" placeholder="Email*">
                    <img src="~/images/icons/user.png"
                        style="display: inline; margin-left: -23px; vertical-align: middle">
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <div class="d-flex align-items-center">
                    <input type="password" class="form-control" asp-for="Password" id="custom-password-input"
                        name="password" placeholder="Password*">
                    <img src="~/images/icons/hidden.png" id="toggle_button_eye"
                        style="display: inline; margin-left: -23px; vertical-align: middle" onclick="toggle()">
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-4 form-check">
                <div class="d-flex justify-content-between">
                    <div>
                        <input type="checkbox" class="form-check-input"  asp-for="RememberMe">
                        <label class="form-check-label" for="RememberMe" style="cursor: pointer;">Remember me</label>
                    </div>
                    <div>
                        <a class="text-decoration-none coustom-link-color" asp-controller="Auth"
                            asp-action="ForgotPassword" asp-route-email="@(Model?.Email ?? string.Empty)">Forgot
                            Password?</a>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary w-100" type="submit">Login</button>
        </form>
    </div>
</div>