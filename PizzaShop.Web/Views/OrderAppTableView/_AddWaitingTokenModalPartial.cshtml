@model PizzaShop.Repository.ViewModels.WaitingTokenViewModel

<div class="modal fade" id="waitingTokenModal" tabindex="-1" aria-labelledby="waitingTokenModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title custom-body-text-color" id="waitingTokenModalLabel">Waiting Token Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="SaveWaitingToken" asp-controller="OrderAppTableView" method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Enter email" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Enter name" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="MobileNumber" class="form-control" placeholder="Enter mobile number" />
                        <label asp-for="MobileNumber"></label>
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="NoOfPersons" class="form-control" placeholder="0" />
                                <label asp-for="NoOfPersons"></label>
                                <span asp-validation-for="NoOfPersons" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <select asp-for="SectionId" class="form-select">
                                    <option value="">Select a Section</option>
                                </select>
                                <label asp-for="SectionId"></label>
                                <span asp-validation-for="SectionId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
